<span></span>
{{> navigation}}
<div class="container">
  <div class="row pt-md-5  py-10 mt-4">

    {{#each tasks }}
    <div class="col-md-3">
      <div class="card">
        <div class="card-header d-flex">
          <h3 class="card-title d-flex jusify-content-between">
            {{title}}
            <a href="/tasks/{{_id}}">
              <i class="fa fa-pencil"></i>
            </a>
          </h3>
        </div>
        <div class="card-body">
          {{description}}
        </div>
        <div class="card-footer justify-content-between ">
          <div class="d-flex">
            <form action="/tasks/{{_id}}?_method=DELETE" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn btn-danger" type="submit">Delete</button>
            </form>
            <a href="/tasks/{{_id}}"><button>ok</button></a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>